# GridPorter Environment Configuration
# Copy this file to .env and fill in your actual values

# ==============================================================================
# OpenAI Configuration
# ==============================================================================
# Your OpenAI API key for GPT-4 vision models
OPENAI_API_KEY=your-openai-api-key-here

# OpenAI model to use (options: gpt-4o-mini, gpt-4o, gpt-3.5-turbo)
OPENAI_MODEL=gpt-4o

# Optional: OpenAI admin API key for accessing usage/costs endpoint
OPENAI_ADMIN_KEY=your-admin-key-here

# ==============================================================================
# Ollama Configuration (for local LLM support)
# ==============================================================================
# Ollama server URL (default: http://localhost:11434)
OLLAMA_URL=http://localhost:11434

# Ollama text model for reasoning and tool use
OLLAMA_TEXT_MODEL=deepseek-r1:7b

# Ollama vision model for spreadsheet analysis
OLLAMA_VISION_MODEL=qwen2.5-vl:7b

# ==============================================================================
# GridPorter Behavior Configuration
# ==============================================================================
# Whether to use local LLM (Ollama) instead of OpenAI (true/false)
# If not set, will auto-detect based on OPENAI_API_KEY presence
# GRIDPORTER_USE_LOCAL_LLM=false

# Whether to suggest table names using LLM (true/false)
GRIDPORTER_SUGGEST_NAMES=true

# Whether to use vision-based detection (true/false)
GRIDPORTER_USE_VISION=false

# ==============================================================================
# Cost Management
# ==============================================================================
# Maximum cost per file in USD
GRIDPORTER_MAX_COST_PER_FILE=0.10

# Maximum cost per session in USD
GRIDPORTER_MAX_COST_PER_SESSION=1.00

# ==============================================================================
# Detection Configuration
# ==============================================================================
# Confidence threshold for table detection (0.0-1.0)
GRIDPORTER_CONFIDENCE_THRESHOLD=0.7

# Enable AI-powered file type detection with Magika (true/false)
GRIDPORTER_ENABLE_MAGIKA=true

# Enable strict format checking (true/false)
GRIDPORTER_STRICT_FORMAT_CHECKING=false

# ==============================================================================
# Caching Configuration
# ==============================================================================
# Enable result caching (true/false)
GRIDPORTER_ENABLE_CACHE=true

# Cache time-to-live in hours
GRIDPORTER_CACHE_TTL_HOURS=24

# ==============================================================================
# Logging Configuration
# ==============================================================================
# Log level (DEBUG, INFO, WARNING, ERROR)
GRIDPORTER_LOG_LEVEL=INFO

# Enable debug mode (true/false)
GRIDPORTER_ENABLE_DEBUG=false

# ==============================================================================
# Feature Collection (Telemetry)
# ==============================================================================
# Enable feature collection for improvement (true/false)
GRIDPORTER_ENABLE_FEATURE_COLLECTION=false

# Path to feature database
# GRIDPORTER_FEATURE_DB_PATH=./features.db
