# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=o3

# Optional: Alternative LLM providers
# ANTHROPIC_API_KEY=your_anthropic_api_key_here
# AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
# AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/

# Optional: Model configuration
# GRIDPORTER_LLM_MODEL=gpt-4o
# GRIDPORTER_LLM_TEMPERATURE=0.3
# GRIDPORTER_LLM_MAX_TOKENS=2000

# Optional: Processing limits
# GRIDPORTER_MAX_FILE_SIZE_MB=50
# GRIDPORTER_TIMEOUT_SECONDS=300

# Optional: Logging
# GRIDPORTER_LOG_LEVEL=INFO
# GRIDPORTER_LOG_FILE=gridporter.log

# Optional: Cache settings
# GRIDPORTER_CACHE_DIR=~/.gridporter/cache
# GRIDPORTER_CACHE_TTL_HOURS=24